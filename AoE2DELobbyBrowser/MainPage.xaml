<Page
    x:Class="AoE2DELobbyBrowser.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AoE2DELobbyBrowser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:AoE2DELobbyBrowser.Converters"
    xmlns:toolkitConverters="using:CommunityToolkit.WinUI.UI.Converters"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:BoolToInvertedVisibilityConverter x:Key="BoolToInvertedVisibility" />
        <toolkitConverters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeight" />
        <converters:DateTimeToTimeConverter x:Key="DateTimeToTime" />
        <Style x:Key="ListItemTextBlock" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Page.Resources>
    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <StackPanel
                Padding="2"
                Background="{StaticResource DarkAccent}"
                IsTabStop="True"
                Orientation="Horizontal"
                Spacing="2">
                <Button
                    Width="80"
                    Command="{x:Bind ViewModel.RefreshCommand}"
                    Content="Refresh"
                    ToolTipService.ToolTip="Refresh (Ctrl + R)">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="R" Modifiers="Control" />
                    </Button.KeyboardAccelerators>
                </Button>
                <CheckBox IsChecked="{x:Bind ViewModel.IsAutoRefreshEnabled, Mode=TwoWay}" ToolTipService.ToolTip="Auto refresh (Ctrl + T)">
                    <TextBlock Foreground="{StaticResource ForegroundTextColor}" Text="Auto refresh (sec)" />
                    <CheckBox.KeyboardAccelerators>
                        <KeyboardAccelerator Key="T" Modifiers="Control" />
                    </CheckBox.KeyboardAccelerators>
                </CheckBox>
                <NumberBox
                    Maximum="120"
                    Minimum="5"
                    SmallChange="5"
                    SpinButtonPlacementMode="Inline"
                    Value="{x:Bind ViewModel.Interval, Mode=TwoWay}" />
                <CheckBox IsChecked="{x:Bind ViewModel.ShowNotifications, Mode=TwoWay}" ToolTipService.ToolTip="Show notifications (Ctrl + N)">
                    <TextBlock Foreground="{StaticResource ForegroundTextColor}" Text="Notifications" />
                    <CheckBox.KeyboardAccelerators>
                        <KeyboardAccelerator Key="N" Modifiers="Control" />
                    </CheckBox.KeyboardAccelerators>
                </CheckBox>
                <Button
                    Background="Transparent"
                    Click="NavigateToSettigns_Click"
                    ToolTipService.ToolTip="Settings (Ctrl + I)">
                    <SymbolIcon Foreground="{StaticResource ForegroundTextColor}" Symbol="Setting" />
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="I" Modifiers="Control" />
                    </Button.KeyboardAccelerators>
                </Button>
            </StackPanel>
            <StackPanel
                Padding="2"
                Background="{StaticResource DarkAccent}"
                IsTabStop="True"
                Orientation="Horizontal"
                Spacing="2">
                <TextBox
                    Width="180"
                    KeyDown="SearchBox_KeyDown"
                    PlaceholderText="search"
                    Text="{x:Bind ViewModel.Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.KeyboardAccelerators>
                        <KeyboardAccelerator
                            Key="F"
                            Invoked="SearchBox_KeyboardAcceleratorInvoked"
                            Modifiers="Control" />
                    </TextBox.KeyboardAccelerators>
                </TextBox>
                <ComboBox
                    Width="180"
                    ItemsSource="{x:Bind ViewModel.GameTypes}"
                    SelectedItem="{x:Bind ViewModel.SelectedGameType, Mode=TwoWay}"
                    ToolTipService.ToolTip="Game type (Ctrl + Q)">
                    <ComboBox.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Q" Modifiers="Control" />
                    </ComboBox.KeyboardAccelerators>
                </ComboBox>
                <ComboBox
                    Width="180"
                    ItemsSource="{x:Bind ViewModel.MapTypes}"
                    SelectedItem="{x:Bind ViewModel.SelectedMapType, Mode=TwoWay}"
                    ToolTipService.ToolTip="Map type (Ctrl + W)">
                    <ComboBox.KeyboardAccelerators>
                        <KeyboardAccelerator Key="W" Modifiers="Control" />
                    </ComboBox.KeyboardAccelerators>
                </ComboBox>
                <ComboBox
                    Width="100"
                    ItemsSource="{x:Bind ViewModel.GameSpeeds}"
                    SelectedItem="{x:Bind ViewModel.SelectedGameSpeed, Mode=TwoWay}"
                    ToolTipService.ToolTip="Game speed (Ctrl + E)">
                    <ComboBox.KeyboardAccelerators>
                        <KeyboardAccelerator Key="E" Modifiers="Control" />
                    </ComboBox.KeyboardAccelerators>
                </ComboBox>

            </StackPanel>
        </StackPanel>
        <ProgressRing
            Grid.Row="1"
            Foreground="{StaticResource DarkAccent}"
            IsActive="{x:Bind ViewModel.Loading, Mode=OneWay}"
            Visibility="{x:Bind ViewModel.Loading, Mode=OneWay, Converter={StaticResource BoolToVisibility}}" />
        <ListView
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.Lobbies, Mode=OneWay}"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:Lobby">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="140" />
                            <ColumnDefinition Width="140" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="44" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontWeight="{x:Bind IsNew, Converter={StaticResource BoolToFontWeight}}"
                            Style="{StaticResource ListItemTextBlock}"
                            Text="{x:Bind Name}"
                            TextTrimming="CharacterEllipsis" />
                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource ListItemTextBlock}"
                            Text="{x:Bind OpenedAt, Converter={StaticResource DateTimeToTime}}" />
                        <TextBlock
                            Grid.Column="2"
                            Style="{StaticResource ListItemTextBlock}"
                            Tapped="ShowPlayersPopup">
                            <Run Text="{x:Bind NumPlayers}" />
                            /<Run Text="{x:Bind NumSlots}" />
                        </TextBlock>
                        <TextBlock
                            Grid.Column="3"
                            Style="{StaticResource ListItemTextBlock}"
                            Text="{x:Bind GameType}" />
                        <TextBlock
                            Grid.Column="4"
                            Style="{StaticResource ListItemTextBlock}"
                            Text="{x:Bind Map}" />
                        <TextBlock
                            Grid.Column="5"
                            Style="{StaticResource ListItemTextBlock}"
                            Text="{x:Bind Speed}" />
                        <Button
                            Grid.Column="6"
                            Width="80"
                            Background="{StaticResource Accent}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            Command="{x:Bind JoinGameCommand}"
                            Content="Join"
                            Foreground="{StaticResource ForegroundTextColor}" />
                        <Button
                            Grid.Column="7"
                            Width="32"
                            Height="32"
                            Margin="12,0,0,0"
                            Padding="0"
                            Background="Transparent"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            Command="{x:Bind CopyLobbyLinkCommand}"
                            Foreground="{StaticResource DarkAccent}"
                            ToolTipService.ToolTip="{x:Bind JoinLink}">
                            <SymbolIcon Symbol="Copy" />
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid
            x:Name="PlayersPopup"
            Grid.Row="1"
            Background="Transparent"
            Tapped="ClosePlayersPopup"
            Visibility="Collapsed">
            <Grid
                Width="640"
                Padding="10"
                VerticalAlignment="Center"
                Background="{StaticResource SystemControlChromeLowAcrylicElementBrush}"
                CornerRadius="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Margin="0,4,0,0"
                    Padding="8,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="240" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        FontWeight="SemiBold"
                        Text="Country" />
                    <TextBlock
                        Grid.Column="1"
                        FontWeight="SemiBold"
                        Text="Name" />
                    <TextBlock
                        Grid.Column="2"
                        FontWeight="SemiBold"
                        Text="Rating"
                        TextAlignment="Right" />
                    <TextBlock
                        Grid.Column="3"
                        FontWeight="SemiBold"
                        Text="Games"
                        TextAlignment="Right" />
                    <TextBlock
                        Grid.Column="4"
                        FontWeight="SemiBold"
                        Text="Wins"
                        TextAlignment="Right" />
                    <TextBlock
                        Grid.Column="5"
                        FontWeight="SemiBold"
                        Text="Streak"
                        TextAlignment="Right" />
                    <TextBlock
                        Grid.Column="6"
                        FontWeight="SemiBold"
                        Text="Drops"
                        TextAlignment="Right" />
                </Grid>
                <ListView Grid.Row="1" ItemsSource="{Binding ElementName=PlayersPopup, Path=DataContext.Players}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="8" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:Player">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="240" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="60" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{x:Bind Country}" />
                                <TextBlock Grid.Column="1" Text="{x:Bind Name}" />
                                <TextBlock
                                    Grid.Column="2"
                                    Text="{x:Bind Rating}"
                                    TextAlignment="Right" />
                                <TextBlock
                                    Grid.Column="3"
                                    Text="{x:Bind Games}"
                                    TextAlignment="Right" />
                                <TextBlock
                                    Grid.Column="4"
                                    Text="{x:Bind Wins}"
                                    TextAlignment="Right" />
                                <TextBlock
                                    Grid.Column="5"
                                    Text="{x:Bind Streak}"
                                    TextAlignment="Right" />
                                <TextBlock
                                    Grid.Column="6"
                                    Text="{x:Bind Drops}"
                                    TextAlignment="Right" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
    </Grid>
</Page>
